# file: .env.example

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/distro_catalog"
# For development, use SQLite:
# DATABASE_URL="file:./dev.db"

# MeiliSearch
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_API_KEY="your_master_key_here"

# Ollama
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="mistral-small-3"

# Hugging Face (Optional - Free Cloud Provider)
# Get your API token at: https://huggingface.co/settings/tokens
HUGGING_FACE_API_KEY="hf_your_token_here"
HF_API_KEY="hf_your_token_here"
HF_MODEL="mistralai/Mistral-7B-Instruct-v0.1"

# Analytics (Optional - Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=""
NEXT_PUBLIC_PLAUSIBLE_API_HOST=""

# Site Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Linux Distro Catalog"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Cloudflare R2 (Optional - for hosted ISOs)
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
R2_PUBLIC_URL=""

# Admin Authentication (for moderation)
ADMIN_SECRET_KEY="generate_a_secure_random_string"

# Vercel (CI/CD)
VERCEL_TOKEN=""
VERCEL_ORG_ID=""
VERCEL_PROJECT_ID=""
